{
  "compilerOptions": {
    "target": "es6",
    "module": "none",
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}